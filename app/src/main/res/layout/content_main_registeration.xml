<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hackthevalley.friendship.MainRegisteration"
    tools:showIn="@layout/activity_main_registeration">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="368dp"
        android:layout_height="600dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="32dp">

        <EditText
            android:id="@+id/campusField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Campus"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="107dp" />

        <EditText
            android:id="@+id/descriptionField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textAutoCorrect|textMultiLine|textShortMessage"
            android:singleLine="false"
            android:text="Tell us about yourself"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="232dp" />

        <EditText
            android:id="@+id/nameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="44dp" />

        <EditText
            android:id="@+id/programField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Program"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="170dp" />

    </ScrollView>

    <EditText
        android:id="@+id/editText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="484dp" />

</android.support.constraint.ConstraintLayout>
